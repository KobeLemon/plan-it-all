<ul class="project-items-list">
    @foreach (var item in ContactsList)
    {
        <ContactItemComponent
            Link = "@item.Link"
            Description="@item.Description"
            ImagePath="@item.ImagePath"
            ImageAlt="@item.ImageAlt"
            HasImage="@item.HasImage">
